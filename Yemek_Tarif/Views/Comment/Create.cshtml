@model Yemek_Tarif.Models.Comment

@using System.Security.Claims

@{
    ViewData["Title"] = "Yorum Ekle";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="CommentText" class="control-label"></label>
        <textarea asp-for="CommentText" class="form-control" placeholder="Yorumunuzu buraya yazın..."></textarea>
        <span asp-validation-for="CommentText" class="text-danger"></span>
    </div>

    <!-- Gizli alanlar: RecipeId ve UserId -->
    <input type="hidden" asp-for="RecipeId" value="@ViewBag.RecipeId" />
    <input type="hidden" asp-for="UserId" value="@User.FindFirst(ClaimTypes.NameIdentifier)?.Value" /> <!-- Kullanıcı Id'sini alır -->

    <button type="submit" class="btn btn-primary">Yorumu Gönder</button>
</form>

<a href="@Url.Action("Details", "Recipe", new { id = ViewBag.RecipeId })" class="btn btn-secondary">Geri</a>
