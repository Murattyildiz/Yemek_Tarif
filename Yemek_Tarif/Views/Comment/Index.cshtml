@model IEnumerable<Yemek_Tarif.Models.Comment>

@{
    ViewData["Title"] = "Yorumlar";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Yorum</th>
            <th>Kullanıcı</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var comment in Model)
        {
            <tr>
                <td>@comment.CommentText</td>
                <td>@comment.User.Username</td>
                <td>@comment.DateCreated.ToString("dd/MM/yyyy HH:mm")</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create", "Comment", new { recipeId = ViewBag.RecipeId })" class="btn btn-primary">Yorum Ekle</a>

<a href="@Url.Action("Details", "Recipe", new { id = ViewBag.RecipeId })" class="btn btn-secondary">Geri</a>
