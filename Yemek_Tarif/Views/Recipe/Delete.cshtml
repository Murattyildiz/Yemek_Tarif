@model Yemek_Tarif.Models.Recipe

@{
    ViewData["Title"] = "Delete Recipe";
}

<h2>Are you sure you want to delete this recipe?</h2>

<div>
    <strong>Title:</strong> @Model.Title
</div>
<div>
    <strong>Category:</strong> @Model.Category.CategoryName
</div>
<div>
    <strong>Created by:</strong> @Model.User.Username
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="id" value="@Model.RecipeId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a href="@Url.Action("Index", "Recipe")" class="btn btn-secondary">Cancel</a>
</form>
