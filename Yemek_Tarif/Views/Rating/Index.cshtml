@model IEnumerable<Yemek_Tarif.Models.Rating>

@{
    ViewData["Title"] = "Puanlar";
}

<h1>@ViewData["Title"]</h1>

<table class="table">
    <thead>
        <tr>
            <th>Puan</th>
            <th>Kullanıcı</th>
            <th>Verilme Tarihi</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var rating in Model)
        {
            <tr>
                <!-- Puanı yıldızlarla göster -->
                <td>
                    <span class="star-rating">
                        @for (int i = 1; i <= 5; i++)
                        {
                            <span class="star @(i <= rating.RatingValue ? "filled" : "")">★</span>
                        }
                    </span>
                </td>
                <td>@rating.User.Username</td>
                <td>@rating.DateCreated.ToString("dd/MM/yyyy")</td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Details", "Recipe", new { id = ViewBag.RecipeId })" class="btn btn-secondary">Geri</a>

<!-- Yıldız Stilleri -->
<style>
    .star-rating {
        font-size: 24px;
        color: gray;
    }

    .star.filled {
        color: gold;
    }
</style>
